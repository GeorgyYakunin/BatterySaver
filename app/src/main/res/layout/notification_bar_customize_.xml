<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_54sdp"
    android:orientation="horizontal"
    android:padding="@dimen/_6sdp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_42sdp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_battery_bar"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_battery_notification" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/zero_h_zero_m"
            android:textColor="@color/colorNotificationBar"
            android:textSize="@dimen/_19sdp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_battery2_bar"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_charging_noti" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/hungred_percent"
        android:textColor="@color/colorNotificationBar"
        android:textSize="@dimen/_19sdp" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:background="@color/colorItemDisable2"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/img_flash"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_flash" />
</LinearLayout>